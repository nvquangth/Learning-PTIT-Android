<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/FragmentStyle">

        <TextView
            android:id="@+id/txt_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose the sentence with the right word order"
            android:textColor="@android:color/black"
            android:background="@drawable/bg_question"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="16sp"/>

        <RelativeLayout
            android:id="@+id/layout_ans1"
            android:layout_below="@+id/txt_content"
            style="@style/styleQuestionLayoutAnswer">
            <TextView
                android:id="@+id/txt_ans1"
                android:layout_toLeftOf="@+id/btn_ans1"
                style="@style/styleQuestionAnser"/>
            <ImageButton
                android:id="@+id/btn_ans1"
                style="@style/styleQuestionButton" />
        </RelativeLayout>
        <View
            android:layout_below="@+id/layout_ans1"
            style="@style/styleQuestionView"/>

        <RelativeLayout
            android:id="@+id/layout_ans2"
            android:layout_below="@+id/layout_ans1"
            style="@style/styleQuestionLayoutAnswer">
            <TextView
                android:id="@+id/txt_ans2"
                android:layout_toLeftOf="@+id/btn_ans2"
                style="@style/styleQuestionAnser"/>
            <ImageButton
                android:id="@+id/btn_ans2"
                style="@style/styleQuestionButton"/>
        </RelativeLayout>
        <View
            android:layout_below="@+id/layout_ans2"
            style="@style/styleQuestionView"/>

        <RelativeLayout
            android:id="@+id/layout_ans3"
            android:layout_below="@+id/layout_ans2"
            style="@style/styleQuestionLayoutAnswer">
            <TextView
                android:id="@+id/txt_ans3"
                android:layout_toLeftOf="@+id/btn_ans3"
                style="@style/styleQuestionAnser"/>
            <ImageButton
                android:id="@+id/btn_ans3"
                style="@style/styleQuestionButton"/>
        </RelativeLayout>
        <View
            android:layout_below="@+id/layout_ans3"
            style="@style/styleQuestionView"/>

        <RelativeLayout
            android:id="@+id/layout_ans4"
            android:layout_below="@+id/layout_ans3"
            style="@style/styleQuestionLayoutAnswer">
            <TextView
                android:id="@+id/txt_ans4"
                android:layout_toLeftOf="@+id/btn_ans4"
                style="@style/styleQuestionAnser"/>
            <ImageButton
                android:id="@+id/btn_ans4"
                style="@style/styleQuestionButton"/>
        </RelativeLayout>
        <View
            android:layout_below="@+id/layout_ans4"
            style="@style/styleQuestionView"/>
    </RelativeLayout>
</ScrollView>